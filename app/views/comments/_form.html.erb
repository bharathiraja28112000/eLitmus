<%= form_with model: [ @article, @article.comments.build ] do |form| %>
    
    <p>
      <%#= form.label :body #%><br>
      <%= form.text_area :body %>
    </p>
    <p>
      <%= form.submit %>
    </p>
    <p>
    <div class="hidden">
  <%= form.label :status %><br>
  <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %> </div>
</p>
  <% end %>