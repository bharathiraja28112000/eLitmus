<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<body>
<div class="w3-container w3-cursive">
<div class="vertical-center">
<div class="horizental-center">
   
<center> <h1 style="color:orange">Sign Up</h1> </center>
<%= form_for @user do |f| %>
    <center>
    <p class="w3-large" style="color:white">username </p>
    <%= f.text_field :username %>
    <p class="w3-large" style="color:white">password </p>
    <%= f.password_field :password %><br><br>
    </center>
    <%= f.submit "SignUp " %>&emsp;
    <div style="background-color: white;
        color: black;
        padding: 3px 5px;
        text-align: center;
        text-decoration: none;
        display: inline-block;">
    <%= link_to "LogIn", root_path %>
    </div>
<% end %>
</div>
</div>
</div>
</body>

